{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/races.schema.json",
  "title": "Races list",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "name", "absorb_qi"],
    "properties": {
      "id": { "type": "string", "minLength": 1 },
      "name": { "type": "string", "minLength": 1 },

      "absorb_qi": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 },
        "uniqueItems": true
      }
    }
  }
}
